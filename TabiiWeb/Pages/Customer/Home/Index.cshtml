@page
@model TabiiWeb.Pages.Customer.Home.IndexModel
<div class="row container pb-3 bg-body-secondary">
	@foreach(var category in Model.CategoryList)
	{
		<h2 class="text-success pl-1"><b>@category.Name</b></h2>
		<div class="col-12">
			<div class="row my-3">
				@foreach (var menuItem in Model.MenuItemList.Where(u => u.CategoryId == category.Id))
				{
					<div class="col-lg-4 col-md-6 pb-4 filter ">
						<div class="bg-success-subtle rounded">
						<div class="card-header row h-500">
								<div class="col-6">
									<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@menuItem.Image" alt="item-image">
								</div>
								<div class="container col-6">
									<div class="h5">@menuItem.Name</div>
									<div>
										<span class="text-info h4">
											@{
												var formattedPrice = string.Format("{0:n0}", menuItem.Price);
												@formattedPrice
											}
										</span>
									</div>
								</div>
						</div>
						<div class="card-body p-1 px-3 row">
							<div class="col-6">
									<span class="badge p-2 border w-100 text-dark bg-warning ">@menuItem.Category.Name</span>
							</div>
							<div class="col-6 border-0">
								<span class="badge p-2 border w-100 bg-info ">@menuItem.FoodType.Name</span>
							</div> 
							@* <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
								<p>@Html.Raw(menuItem.Description)</p>
							</div> *@
							<div class="col-12 p-1">
								<a asp-page="Details" asp-route-id="@menuItem.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
							</div>
						</div>
					</div>
				</div>
				}
			</div>
		</div>
	}
	
</div>
