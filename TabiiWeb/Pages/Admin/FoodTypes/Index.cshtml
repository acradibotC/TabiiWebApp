@page
@model TabiiWeb.Pages.Admin.FoodTypes.IndexModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Food Type List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-page="createtype" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
                &nbsp;Create New Type
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100% ">
        <thead>
            <tr>
                <th>
                    ID 
                </th>
                <th>
                    FoodType Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.FoodType)
            {
                <tr>
                    <td width="50%">@obj.Id</td>
                    <td width="30%">@obj.Name</td>
                    <td>
                        <div class="w-70 btn-group" role="group">
                        <a asp-page="EditType" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                            <a asp-page="DeleteType" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
